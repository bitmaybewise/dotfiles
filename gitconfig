# More information:
# https://git.wiki.kernel.org/index.php/Aliases

[github]
  user = Hercules Merscher
[gitlab]
  user = Hercules Merscher
[color]
  diff = auto
  status = auto
  branch = auto
[push]
  default = current
[pull]
  default = current
[alias]
  st = status -s
  aa = add --all .
  cm = commit -m
  camend = commit --amend --no-edit
  pfwl = push --force-with-lease
  br = branch -a
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  who = shortlog -sn
  undo = reset --hard HEAD
  serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
  # list local branches but the pattern specified
  but = !sh -c 'git branch --list | grep -vi $1' -
  recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
[core]
  excludesfile = ~/.gitignore_global
	autocrlf = input
[init]
  defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
[includeIf "gitdir:~/BitMaybeWise/"]
  path = ~/BitMaybeWise/.gitconfig
[includeIf "gitdir:~/GitLab/"]
  path = ~/GitLab/.gitconfig
[maintenance]
	repo = /Users/hercules/GitLab/gdk
	repo = /Users/hercules/GitLab/gdk/gitlab
